<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/recipeImageView"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="8dp"

        android:src="@drawable/recette_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvTitre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/recette_icon"
        tools:srcCompat="@drawable/recette_icon" />

    <TextView
        android:id="@+id/tvTitre"
        android:layout_width="282dp"
        android:layout_height="110dp"
        android:layout_marginStart="8dp"
        android:text="Titre"
        android:textColor="@color/black"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="@+id/recipeImageView"
        app:layout_constraintStart_toEndOf="@+id/recipeImageView"
        app:layout_constraintTop_toTopOf="@+id/recipeImageView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="4dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/recipeImageView"
        tools:layout_editor_absoluteX="65dp"></LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>