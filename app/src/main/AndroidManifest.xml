<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.polytech.fridge">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_refrigerator"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_refrigerator"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fridge">
        <activity
            android:name=".ui.fridge.controller.MainActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.fridge.controller.FindFoodsActivity" />
        <activity android:name=".ui.fridge.controller.AddFoodItemActivity" />
    </application>

</manifest>